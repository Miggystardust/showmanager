<h2>Forgot your password?</h2>
<P>
Fill out the form below and we'll send you a recovery link.
</p>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
  <div class="control-group">
    <label class="control-label" for="email">Email</label>
    <div class="controls">
    <%= f.email_field :email, :class=>"input-xlarge" %>
    <BR>
    <%= f.submit "Send me reset password instructions", :class => "btn"  %>
    </div>
  </div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
