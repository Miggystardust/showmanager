<h2>Sign in</h2>

<div id="stylized" class="myform">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" } ) do |f| %>
  <fieldset>
<div class="control-group">
 <div class="controls">
  <P>
    If you have signed in with facebook before, 
    just click the Button.<BR>
    No need to enter your password.
  </P>
  <a href="<%=omniauth_authorize_path(resource_name, 'facebook') %>" class="btn  btn-info">Sign in with Facebook</a>
 </div>
</div>

  <div class="control-group"> 
    <%= f.label :email, :class=>"control-label" %>
    <div class="controls">
      <%= f.email_field :email, :class=>"input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => "control-label"  %>
    <div class="controls">
      <%= f.password_field :password, :class=>"input-xlarge" %></div>
    </div>
  <div>

  <% if devise_mapping.rememberable? -%>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox" for="user_remember_me">Remember me
      <%= f.check_box :remember_me %> 
      </label>
    </div>
  </div>
  <% end -%>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Sign in wth your Password", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
