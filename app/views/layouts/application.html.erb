<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width">
    <title>Hubba Hubba: Stage Management</title>
    <meta name="description" content="Hubba Hubba Stage Manager System">
    <meta name="author" content="John Adams">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= stylesheet_link_tag "main"  %>
    <%= stylesheet_link_tag "bootstrap.min"  %>
    <%= stylesheet_link_tag "bootstrap-responsive.min"  %>
    <!--[if lt IE 7]><link rel="stylesheet" href="http://blueimp.github.com/cdn/css/bootstrap-ie6.min.css"><![endif]-->
    <%= stylesheet_link_tag "bootstrap-image-gallery.min.css" %>
    <%= stylesheet_link_tag "jquery.fileupload-ui.css" %>
    <%= stylesheet_link_tag "blitzer/jquery-ui-1.8.21.custom" %>
    <%= stylesheet_link_tag "DT_bootstrap" %>
    <%= javascript_include_tag "application" %>

    <!-- Add fancyBox -->
    <%= stylesheet_link_tag "jquery.fancybox" %>
    <%= csrf_meta_tags %>
	<%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
  </head>  
  <body>
  <%= render 'layouts/navigation' %>
  <div class="container">
    <%= render 'layouts/messages' %>
    <%= yield %>
  </div>
  </body>
</html>
