<div id="stylized" class="myform">

<%=form_for(@passet,  :html => {  :class => "form-horizontal" } ) do |f| %>
<fieldset>
<% if @passet.errors.any? -%>
<div id="error_explanation">
  <h2><%= pluralize(@passet.errors.count, "error") %> prohibited this act from being saved:</h2>
  
  <ul>
    <% @passet.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end -%>

<div class="alert alert-danger">
Expert Users Only! Modifying fields on this page can break 
assets and their management.
</div>

<% @noedit = 1 %>
<TABLE CLASS="table table-striped">
<TR>
<% if defined? @adminindex -%>
<TH>Owner</TH>
<% end -%>
<TH WIDTH=200>Preview</TH>
<TH>File</TH>
<TH COLSPAN=2>Actions</TH>
</TR>
<%= render(@passet) %>
</TABLE>

<div class="control-group">
  <%= f.label :uuid, "Storage UUID", :class => "control-label" %>
  <div class="controls">
    <%= f.text_field :uuid, :class => "input-xlarge" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :filename, "Filename", :class => "control-label" %>
  <div class="controls">
    <%= f.text_field :filename, :class => "input-xlarge" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :kind, "Kind", :class => "control-label" %>
  <div class="controls">
    <%= f.text_field :kind, :class => "input-xlarge" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :song_artist, "Song Artist", :class => "control-label" %>
  <div class="controls">
    <%= f.text_field :song_artist, :class => "input-xlarge" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :song_title, "Song Title", :class => "control-label" %>
  <div class="controls">
    <%= f.text_field :song_title, :class => "input-xlarge" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :song_length, "Song Length", :class => "control-label" %>
  <div class="controls">
    <%= f.text_field :song_length, :class => "input-xlarge" %>
  </div>
</div>


<div class="control-group">
  <%= f.label :song_bitrate, "Song Bitrate", :class => "control-label" %>
  <div class="controls">
    <%= f.text_field :song_bitrate, :class => "input-xlarge" %>
  </div>
</div>

<div class="control-group">
  <div class="controls">
	<% if @passet.id != nil %>
    <%= f.submit "Update Asset", :class => "btn-primary" %>
	<% else -%>
    <%= f.submit "Create Asset", :class => "btn-primary" %>
	<% end -%>
  </div>
</div>
</fieldset>
<% end -%>
