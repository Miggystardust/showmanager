<h1>Shows</h1>

<P>
<a href="/shows/new" class="btn btn-primary"><i class="glyphicon glyphicon-plus-sign white"></i>&nbsp;Create Show</a>
</p>

<% if @shows.length == 0 -%>
There are no shows on file. Create one. 

<% else %>
<div id="showsTable">
<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="showslist">
<thead>
  <tr>
    <th>Title</th>
    <th>Venue</th>
    <th width=120>Door time</th>
    <th width=120>Show time</th>
    <th class="noprint">Actions</th>
  </tr>
</thead>
<tbody>
<!-- data -->
</tbody>
</table>
</div>

<script>
$.extend( $.fn.dataTableExt.oStdClasses, {
  "sWrapper": "dataTables_wrapper form-inline"
} );

$(document).ready(function() {
  showsDT = $('#showslist').dataTable( {
      "sDom": "<'row'<'col-6'l><'col-12'f>r>t<'row'<'col-12'i><'col-12'p>>",
      "sAjaxSource": "/shows.json",
      "sPaginationType": "full_numbers",
      "iDisplayLength": 30,
      "oLanguage": {
      "sLengthMenu": "Show&nbsp;<select size=1 name=actslist_length aria-controls=\"actslist\"><option value='5'>5</option><option \
value='10'>10</option><option value='15'>15</option><option value='30'>30</option></select>&nbsp;records per page"
    },
     "fnServerData": function ( sSource, aoData, fnCallback ) {
        $.ajax({'datatype':'json',
                'type':'GET',
                'url':sSource,
                'data':aoData,
                'success':function(json) {
                   fnCallback(json);
            }})
     },
     "fnRowCallback": function( nRow, aData, iDisplayIndex ) {
      var id = $('td:eq(4)',nRow).html();
      var content = $('td:eq(4)',nRow).html();

      if (content.indexOf("btn") == -1) { 
        $('td:eq(4)', nRow).html('<a class="btn btn-success btn-mini" href="/shows/' + id + '"><i class="glyphicon white glyphicon-eye-open"></i> Live View</a>' + 
        '&nbsp;<a class="btn btn-success btn-mini" href="/shows/' + id + '/perfindex"><i class="glyphicon white glyphicon-list"></i> List</a>' +
        '&nbsp;<a class="btn btn-warning btn-mini" href="/shows/' + id + '/download"><i class="glyphicon white glyphicon-download"></i> Download</a>' +
        '&nbsp;<a class="btn btn-primary btn-mini" href="/shows/' + id + '/edit"><i class="glyphicon white glyphicon-pencil"></i> Edit</a>' +
        '&nbsp;<a class="btn btn-danger btn-mini" href="/shows/' + id + '" data-confirm="Are you sure?" data-method="delete" rel="nofollow"><i class="glyphicon-remove glyphicon white"></i> Delete</a>');
      }
     }
  });

  var fixHelper = function(e, ui) {
    ui.children().each(function() {
        $(this).width($(this).width());
      });
    return ui;
  };


});

</script>

<% end -%>
