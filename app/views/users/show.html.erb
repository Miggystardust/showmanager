<h1>User: <%= @user.username %> (<%=@user._id %>)</h1>
<%= form_for(@user,  :html => {  :class=>"form-horizontal" } ) do |f| %>
<fieldset>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@act.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <legend>Account Information</legend>

    <div class="control-group">
       <%= f.label :name, "Name *", :class=>"control-label required" %>
      <div class="controls">
        <%= f.text_field :name, :class=>"input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
        <%= f.label :email, "Email *", :class=>"control-label required" %>
      <div class="controls">
        <%= f.text_field :email, :class=>"input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
        <%= f.label :provider, "Provider", :class=>"control-label" %>
      <div class="controls">
        <%= f.text_field :provider, :class=>"input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
        <%= f.label :last_sign_in_ip, "Last IP", :class=>"control-label" %>
      <div class="controls">
        <%= f.text_field :last_sign_in_ip, :class=>"input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
        <%= f.label :last_sign_in_at, "Last Sign In", :class=>"control-label" %>
      <div class="controls">
        <%= f.text_field :last_sign_in_at, :class=>"input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
        <%= f.label :sign_in_count, "Sign In Count", :class=>"control-label" %>
      <div class="controls">
        <%= f.text_field :sign_in_count, :class=>"input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
        <%= f.label :admin, "Admin?", :class=>"control-label" %>
      <div class="controls">
        <%= f.check_box :admin, :class=>"input-xlarge" %>
      </div>
    </div>


    <div class="control-group">
      <div class="controls">
        <%= f.submit :class=>"button-primary" %>
      </div>
    </div>

  </fieldset>
<% end %>


<h2>Acts</h2>
<table class="table table-striped">
  <tr>
	<% if @showowner %>
    <th>Owner</th>
	<% end %>
    <th>Stage Name</th>
    <th>Short Description</th>
    <th>Music?</th>
    <th>Image/Video?</th>
    <th colspan=3>Actions</th>
  </tr>
<% @user.acts.each { |act| %>
<%=render act %>
<% } %>
</table>

<h2>Assets</h2>
<TABLE CLASS="table table-striped">
<TR>
<% if defined? @adminindex -%>
<TH>Owner</TH>
<% end -%>
<TH WIDTH=200>Preview</TH>
<TH>File</TH>
<TH COLSPAN=3>Actions</TH>
</TR>
<% @user.passets.each { |passet| %>
<%= render :partial => '/passets/passet', :locals => { :passet => passet } %>
<% } %>
</TABLE>
