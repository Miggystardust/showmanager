    <%= f.label :comments, "comments", :class => "control-label col-xs-4" %>
    <div class="col-sm-4">
      <%= f.text_field :comments, :class => "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= link_to 'Cancel', dashboard_app_path(@app), :class => "btn btn-danger" %>
    <%= f.submit :class => "btn btn-primary" %> 
  </div>

