<%= form_for([@app,@entry], :html => {:class => "form-horizontal", :role => "form"}) do |f| %>
  <input type=hidden name="for_app" value="<%=@app.id.to_s%>">
  <% if @entry.errors.any? %>
    <div class="alert alert-danger">
      <%= pluralize(@entry.errors.count, "error") %> prohibited
      your entry from being saved. Please correct the errors below
      and try again.
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Name", :class => "control-label col-xs-4"%>
    <div class="col-xs-4">
      <%= f.text_field :name, :class => "form-control" %>   
      <P class="help-block">Name your act</p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :type, "type", :class => "control-label col-xs-4" %>
    <div class="col-xs-4">
      <%= f.text_field :type, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city_from, "city_from", :class => "control-label col-xs-4" %>
